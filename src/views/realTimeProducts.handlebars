<form id="productForm">
  <input type="text" name="productName" placeholder="Nombre del producto">
  <button type="submit">Agregar</button>
</form>

<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();

  document.getElementById('productForm').addEventListener('submit', (event) => {
    event.preventDefault(); 
    const productName = document.getElementsByName('productName')[0].value;

    socket.emit('createProduct', { name: productName });
  });

  // Resto del c√≥digo para recibir y mostrar actualizaciones en tiempo real
</script>
